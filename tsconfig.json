{ 
    "compilerOptions": { 
        "rootDir": "src", 
        "outDir": "build", 
        "target": "es6", 
        "allowJs": true, 
        "moduleResolution": "node", 
        "declaration": true,
        "declarationDir": "types",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true,
        "module": "ESNext", 
        "esModuleInterop": true, 
        "forceConsistentCasingInFileNames": true, 
        "strict": true, 
        "skipLibCheck": true ,
        "jsx": "react"
    }, 
    "include": ["src"], 
    "exclude": ["node_modules", "build"] 
}
